          <image class='course-opinion-user-cover' src='https://gitee.com/uploads/56/1167256_sunny9.png' />
          <text class='course-opinion-user-name'>{{user.name}}</text>
          <view slot="extra" class='vui-card-extra'>
            关注
          </view>
        </view>
      </card>
    </view>
